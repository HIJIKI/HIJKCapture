//--------------------------------------------------------------------------------------------------
//= DataLoadサブルーチン(本体/設定 どちらのexeでも使用するため別ファイルで作成)
//	本体側はSubroutine.hspにてinclude
//--------------------------------------------------------------------------------------------------
#define DATA_FILE		"data.dat"

*__DataLoad
	exist DATA_FILE
	if( strsize != -1 ){
		vload_start DATA_FILE
			vload_get FtpHost
			vload_get FtpUserName
			vload_get FtpPassword
		vload_end
	} else {
		FtpHost = ""
		FtpUserName = ""
		FtpPassword = ""
	}
return

*__DataSave
	vsave_start
		vsave_put FtpHost
		vsave_put FtpUserName
		vsave_put FtpPassword
	vsave_end DATA_FILE
return